<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.CineMate" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="GenreChip">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/genre_chip_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GenreChipSelected" parent="GenreChip">
        <item name="android:background">@drawable/genre_chip_selected_bg</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ChipStyle">
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">#000</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>


</resources>
